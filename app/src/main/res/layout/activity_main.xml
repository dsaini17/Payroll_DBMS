<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD EMPLOYEE"
            android:id="@+id/addEmployeeButton"
            android:layout_gravity="center"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="List All Employees"
            android:id="@+id/allEmployeeButton"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="GIVE BONUS"
            android:id="@+id/bonusButton"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/giveLoanButton"
            android:text="GIVE LOAN"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/removeLoanButton"
            android:text="REMOVE LOAN"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewLoanButton"
            android:layout_gravity="center"
            android:text="VIEW ALL LOANS"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ENTER ATTENDANCE"
            android:id="@+id/enterAttendanceButton"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/viewAttendanceButton"
            android:text="VIEW ATTENDANCE"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/dispatchSalaryButton"
            android:text="DISPATCH SALARIES"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/payrollStatisticsButton"
            android:layout_gravity="center"
            android:text="STATISTICS"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REMOVE EMPLOYEE"
            android:layout_gravity="center"
            android:id="@+id/removeEmployeeButton"
            />

    </LinearLayout>

</ScrollView>