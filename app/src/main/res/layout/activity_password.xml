<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundPass"
    tools:context="com.example.devesh.payroll.PasswordActivity">

    <EditText
        android:layout_marginTop="20sp"
        android:layout_width="300sp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:hint="ADMINISTRATOR PASSWORD"
        android:id="@+id/passwordEditText"
        android:textColorHint="@color/colorWhite"
        android:textColor="@color/colorWhite"
        android:inputType="textPassword"
        />

    <Button
        android:layout_marginTop="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="LOG IN"
        android:background="@drawable/button_style1"
        android:textSize="15sp"
        android:id="@+id/loginButton"
        android:textColor="@drawable/button_style1_text"
        />

    <is.arontibo.library.ElasticDownloadView
        android:layout_width="wrap_content"
        android:layout_height="310dp"
        android:layout_gravity="center"
        android:id="@+id/magicView"
        ></is.arontibo.library.ElasticDownloadView>

    <TextView
        android:layout_marginTop="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Change Password?"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:id="@+id/passwordTextView"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Meet Developers"
        android:textSize="18sp"
        android:layout_marginTop="10sp"
        android:id="@+id/developerTextView"
        android:textColor="@color/colorWhite"
        />

</LinearLayout>
